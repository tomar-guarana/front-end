<!doctype html>
<html lang="pt-br">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Painel Administrador</title>

    <!-- Bootstrap core CSS -->
    <link href="dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://gitcdn.github.io/bootstrap-toggle/2.2.2/css/bootstrap-toggle.min.css" rel="stylesheet">
    <script src="https://gitcdn.github.io/bootstrap-toggle/2.2.2/js/bootstrap-toggle.min.js"></script>

    <!-- Custom styles for this template -->
    <link href="dist/css/admin.css" rel="stylesheet">
    <style>
    input:checked+label::before {
      background-color: green !important
    }
    input+label::before{
      background-color: red !important
    }
    </style>
  </head>

  <body class="text-center">

    <nav class="navbar navbar-expand-lg navbar-white bg-white fixed-top" id="mainNav">
      <div class="container">
        <a class="navbar-brand js-scroll-trigger" href="#page-top">Painel Administrador</a>
        <div align="right" class="sair">
            <button class="btn btn-outline-dark" type="submit">Sair</button>
        </div>
      </div>
    </nav>

    <div class="tabela">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th scope="col">Aluno</th>
              <th scope="col">Evento</th>
              <th scope="col">Grupo</th>
              <th scope="col">Horas</th>
              <th scope="col">Aprovar</th>
              <th scope="col">#</th>
            </tr>
          </thead>
          <tbody>
            <% for(var i=0; i<data.length; i++) {%>
            <tr>
              <form action="" method="post">
              <td scope="row"><%= data[i].nome %></td>
              <td><%= data[i].Tipo %></td>
              <td>
                <select name="grupo" id="grupo">
                    <option value="1" <%= data[i].grupo == '1' ? 'selected':'' %> >Grupo 1</option>
                    <option value="2" <%= data[i].grupo == '2' ? 'selected':'' %> >Grupo 2</option>
                    <option value="3" <%= data[i].grupo == '3' ? 'selected':'' %> >Grupo 3</option>
                </select>
              </td>
              <td>
                  <input type="text" name="horas" id="horas" value="<%= data[i].grupo ? data[i].horas :'0' %>"/>
              </td>
              <td>
                <div class="form-group">  
                  <span class="switch switch-sm">
                    <input type="checkbox" class="switch" id="switch-sm" name="aprovado" <%= data[i].aprovado == '1' ? 'checked':'' %>>
                    <label for="switch-sm"></label>
                  </span>
                </div>
              </td>
              
              <td>
                <input type="hidden" name="id" value="<%= data[i].id %>"/>
                <input type="submit" value="Enviar"/>
              </td>
            </form>
            </tr>
            <% } %>
          </tbody>
        </table>

    </div>

    <footer>
      <p class="mt-5 mb-3 text-muted">&copy;2018</p>
    </footer>


  </body>
</html>